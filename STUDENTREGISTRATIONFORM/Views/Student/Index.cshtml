@model List<STUDENTREGISTRATIONFORM.Models.Domain.Student>
 
@{
}
<head>
    <style>
        .viewClass {
            text-decoration: none;
            color: white;
            font-weight: bold;
        }

        .viewClass:hover {
            color: white
        }
    </style>
</head>
<h1>Students</h1>

<table class="table table-bordered">
   <thead>
        <tr>
            <th colspan="11">Student Details</th>
            <th colspan="5">Parent Details</th>
            <th colspan="3">General Information</th>
        </tr>
        <tr>
            <th>Id</th>
            <th>Branch</th>
            <th>Student First Name</th>
            <th>Student Last Name</th>
            <th>Gender</th>
            <th>Admission Year</th>
            <th>Admission Category</th>
            <th>Class</th>
            <th>Student Date of Birth</th>
            <th>Second Language</th>
            <th>Third Language</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Mobile Number</th>
            <th>Email ID</th>
            <th>Realtionship</th>
            <th>Would you like campus tour</th>
            <th>How did you hear about us?</th>
            <th>Additional Information</th>
            <th>Actions</th>
        </tr>
   </thead>
   <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Branch</td>
                    <td>@student.StudentFirstName</td>
                    <td>@student.StudentLastName</td>
                    <td>@student.Gender</td>
                    <td>@student.AdmissionYear</td>
                    <td>@student.AdmissionCategory</td>
                    <td>@student.Class</td>
                    <td>@student.StudentDateofBirth</td>
                    <td>@student.SecondLanguage</td>
                    <td>@student.ThirdLanguage</td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.MobileNumber</td>
                    <td>@student.EmailID</td>
                    <td>@student.Relationship</td>
                    <td>@student.WouldyoulikeCampusTour</td>
                    <td>@student.Howdidyouhearaboutus</td>
                    <td>@student.AdditionalInformation</td>
                    <td style="display: block;width: 165px; text-align: center"><button class="btn btn-primary"><a class="viewClass" href="Student/view/@student.Id">View</a></button></td>
                </tr>
            }
        } else
        {
            <tr>
                <td colspan="20"style="text-align: center"><h3>No Data in Table</h3></td>
            </tr>
        }
    </tbody>
</table>